@model XportGear.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Create a New Account</h2>
<p>
    Use the form below to create a new account.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.FirstName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "First Name" } })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.LastName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Last Name" } })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.CellNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.CellNumber, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Phone Number" } })
                @Html.ValidationMessageFor(m => m.CellNumber)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Email" } })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.HomeAddress)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.HomeAddress, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Street,Town,Zip Code, Country" } })
                @Html.ValidationMessageFor(m => m.HomeAddress)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.City)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.City, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Street,Town,Zip Code, Country" } })
                @Html.ValidationMessageFor(m => m.City)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.PostalCode)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.PostalCode, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Street,Town,Zip Code, Country" } })
                @Html.ValidationMessageFor(m => m.PostalCode)
            </div>
            <p>
                Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
            </p>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Password" } })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Re-Enter Password" } })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <br />
            <p>
                <input type="submit" class="btn btn-success" value="Register" />
            </p>
        </fieldset>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
