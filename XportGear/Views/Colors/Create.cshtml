@model XportGear.Models.Color

@{
    ViewBag.Title = "Create";
}





@using (Html.BeginForm("Create", "Colors", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Color</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ColorName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.EditorFor(model => model.ColorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ColorName, "", new { @class = "text-danger" })
        </div>
    </div>
  
    <div class="pull-right">
        <input type="submit" value="Create New" class="btn btn-success" />
    </div>


</div>
}

<div>
    <a class="btn btn-default" href="@Url.Action("Index","Colors")">
        <i class="fa fa-angle-left"></i>
        Back to List
    </a>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
